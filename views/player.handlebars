<center>
<div class="container">
    <div class="profile">
            <div class="col-xs-12">
                <div class="profile-main">

                    <!-- USERPIC -->
                    <div class="profile-userpic ">
                        <img src="https://gravatar.com/avatar/31b64e4876d603ce78e04102c67d6144?s=80&d=https://codepen.io/assets/avatars/user-avatar-80x80-bdcd44a3bfb9a5fd01eb8b86f9e033fa1a9897c3a15b33adfc2649a002dab1b6.png"
                            class="img-responsive" alt="">
                    </div>
                    {{#each users}}
                    <!-- USER NAME and HANDICAP -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            {{this.playername}}
                        </div>
                        <div class="profile-usertitle-handicap">
                            Handicap: 
                            {{this.playerhandicap}}
                        </div>
                    </div>
                    <!-- STATS -->
                    <div class="stats">
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="uppercase profile-stat-text">Games Played:</div>
                            <div class="uppercase profile-stat-title">{{this.playermatches}}</div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="uppercase profile-stat-text">Avg Score</div>
                            <div class="uppercase profile-stat-title">{{this.playeravgscore}}</div>
                        </div>
                        <div class="col-md-4 col-sm-4 col-xs-12">
                            <div class="uppercase profile-stat-text">Avg Putts Per Hole</div>
                            <div class="uppercase profile-stat-title">{{this.playeravgputtsperhole}}</div>
                        </div>
                    </div>
                    {{/each}}
                    <!-- BUTTONS -->
                    <div class="col-xs-12 profile-userbuttons">
                        <button type="button" class="btn btn-history btn-sm">Match History</button>
                        <button type="button" class="btn btn-new btn-sm">New Match</button>
                    </div>
                </div>
            </div>
    </div>
</center>